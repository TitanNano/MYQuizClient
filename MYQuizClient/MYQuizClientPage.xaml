<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		     xmlns:local="clr-namespace:MYQuizClient" 
			 x:Class="MYQuizClient.MYQuizClientPage"
             Title="Login">
	<ContentPage.Content>
    
    <StackLayout HorizontalOptions="Center" Margin="0,120">
      <Label Text="Pincode" FontSize="24"  />
      <Entry x:Name="en_pincode" FontSize="24" Keyboard="Numeric" TextChanged="OnPincode" HorizontalTextAlignment="Center" />

      <Label x:Name="lb_loggedin" FontSize="18"   />
    </StackLayout>
    
	</ContentPage.Content>

  
</ContentPage>