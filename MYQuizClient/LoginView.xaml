<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MYQuizClient.LoginView"
             Title="Login">
  <ContentPage.Content>

    <StackLayout HorizontalOptions="Center" Margin="0,120">
      
      <Entry x:Name="en_pincode" FontSize="22" Keyboard="Numeric" HorizontalTextAlignment="Center" Placeholder="Bitte Pincode hier eingeben..." />

      <Label x:Name="lb_loggedin" FontSize="18" Text="Pincode ist falsch"  />
    </StackLayout>

  </ContentPage.Content>


</ContentPage>